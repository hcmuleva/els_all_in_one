{
  "kind": "collectionType",
  "collectionName": "kitsubscriptions",
  "info": {
    "singularName": "kitsubscription",
    "pluralName": "kitsubscriptions",
    "displayName": "kitsubscription",
    "description": "User kit subscriptions with payment tracking"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "transactionid": {
      "type": "string",
      "unique": true
    },
    "notes": {
      "type": "blocks"
    },
    "paymentstatus": {
      "type": "enumeration",
      "enum": [
        "ACTIVE",
        "EXPIRED",
        "CANCELLED",
        "PENDING",
        "FAILED"
      ],
      "default": "PENDING"
    },
    "auto_renew": {
      "type": "boolean",
      "default": false
    },
    "enddate": {
      "type": "date"
    },
    "startdate": {
      "type": "date"
    },
    "grace_period_days": {
      "type": "integer",
      "default": 0
    },
    "subscription_type": {
      "type": "enumeration",
      "enum": [
        "FREE",
        "PAID",
        "FREEMIUM"
      ]
    },
    "cashfree_order_id": {
      "type": "string"
    },
    "cashfree_subscription_id": {
      "type": "string"
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "CARD",
        "UPI",
        "NETBANKING",
        "WALLET",
        "FREE",
        "OTHER"
      ]
    },
    "cancelled_at": {
      "type": "datetime"
    },
    "cancellation_reason": {
      "type": "text"
    },
    "next_billing_date": {
      "type": "date"
    },
    "last_payment_at": {
      "type": "datetime"
    },
    "amount_paid": {
      "type": "decimal"
    },
    "kit": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::kit.kit",
      "inversedBy": "kitsubscriptions"
    },
    "pricing": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::pricing.pricing",
      "inversedBy": "kitsubscriptions"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "kitsubscriptions"
    },
    "org": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::org.org",
      "inversedBy": "kitsubscriptions"
    },
    "unlocked_levels": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::kitlevel.kitlevel",
      "mappedBy": "kitsubscriptions"
    },
    "unlocked_lessons": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::lesson.lesson",
      "inversedBy": "kitsubscriptions"
    },
    "payments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::user-payment.user-payment",
      "mappedBy": "kitsubscription"
    }
  }
}
